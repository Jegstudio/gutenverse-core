		"iconClosed": {
			"type": "string",
			"default": "fas fa-plus"
		},
		"iconClosedType": {
			"type": "string",
			"default": "icon"
		},
		"iconClosedSVG": {
			"type": "string",
			"default": ""
		},
		"dynamicDataList": {
			"type": "array",
			"default": []
		},
		"openDynamic": {
			"type": "string"
		},
		"dynamicTextContent": {
			"type": "array",
			"copyStyle": true
		},
		"dynamicUrlContent": {
			"type": "array",
			"copyStyle": true
		},
		"iconPosition": {
			"type": "string",
			"default": "left"
		},
		"titleTag": {
			"type": "string",
			"default": "span"
