			"type": "array",
			"default": []
		},
		"first": {
			"type": "boolean",
			"default": false
		},
		"iconOpen": {
			"type": "string",
			"default": "fas fa-minus"
		},
		"iconOpenType": {
			"type": "string",
			"default": "icon"
